<%= form_with(model: identifier_type, local: true) do |form| %>
  <% if identifier_type.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(identifier_type.errors.count, "error") %> prohibited this identifier_type from being saved:</h2>

      <ul>
      <% identifier_type.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class='form-group col-12 col-sm-4'>
    <%= label_tag 'name', 'Name', {'data-toggle' => "tooltip"} %>
    <%= form.text_field :name, {:class => "form-control", :placeholder => "Name of source"} %>
  </div>

  <div class='form-group col-12 col-sm-4'>
    <%= label_tag 'url_mask', 'URL mask', {'data-toggle' => "tooltip"} %>
    <%= form.text_field :url_mask, {:class => "form-control", :placeholder => "URL mask"} %>
  </div>
  
    <div class='form-group col-12 col-sm-4'>
      <%= form.check_box :pluralizable %> Pluralizable
    </div>



  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
