<p id="notice"><%= notice %></p>

<h1>Todo Types</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todo_types.each do |todo_type| %>
      <tr>
        <td><%= link_to 'Show', todo_type %></td>
        <td><%= link_to 'Edit', edit_todo_type_path(todo_type) %></td>
        <td><%= link_to 'Destroy', todo_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

